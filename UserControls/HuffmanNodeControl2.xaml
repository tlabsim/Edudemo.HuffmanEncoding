<UserControl x:Class="EduDemo.HuffmanCoding.HuffmanNodeControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    
    <UserControl.LayoutTransform>
        <ScaleTransform x:Name="ST" ScaleX="1" ScaleY="1"></ScaleTransform>
    </UserControl.LayoutTransform>
    
    <Grid>
        <Border Name="BackgroundBorder" Background="#FFF6F6F6" BorderBrush="Crimson" BorderThickness="1" CornerRadius="3" Margin="0,0,2,2">
            <TextBlock Foreground="Crimson" TextAlignment="Center" Margin="5" VerticalAlignment="Center">
            <Run Name="txtName" Text="" FontSize="15" FontWeight="Bold"></Run>
            <LineBreak></LineBreak>
            <Run Name="txtFrequency" Text="" ToolTip="Frequency"></Run>
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
